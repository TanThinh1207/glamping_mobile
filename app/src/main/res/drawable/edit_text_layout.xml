<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item android:top="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/> <!-- Match EditText corner radius -->
            <solid android:color="@color/black"/> <!-- Semi-transparent black shadow -->
        </shape>
    </item>

    <!-- Main Background Layer -->
    <item android:top="4dp" android:bottom="4dp"> <!-- Shadow Offset -->
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <solid android:color="@android:color/white"/> <!-- Background color -->
            <stroke android:width="2dp" android:color="@android:color/darker_gray"/> <!-- Optional border -->
        </shape>
    </item>

</layer-list>
