<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">  <!-- Makes it a circle -->
            <solid android:color="@color/grey"/> <!-- Change color when pressed -->
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent"/> <!-- Default background -->
        </shape>
    </item>
</selector>
